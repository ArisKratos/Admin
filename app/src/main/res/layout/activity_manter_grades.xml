<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controle.ManterGrades">

    <Button
        android:id="@+id/uparGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="144dp"
        android:background="@color/colorPrimary"
        android:text="upar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editAnoGrades"
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerCursoGrades"
        android:layout_width="150px"
        android:layout_height="100px"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/spinnerSemestre"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSelecionarArquivo"
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="88dp"
        android:background="@color/design_default_color_primary"
        android:text="Selecionar arquivo"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toTopOf="@+id/uparGrade"
        app:layout_constraintStart_toStartOf="@+id/editAnoGrades" />

    <Spinner
        android:id="@+id/spinnerSemestre"
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/editAnoGrades"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>