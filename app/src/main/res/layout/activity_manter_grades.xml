<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".Controle.ManterGrades">

    <Button
        android:id="@+id/uparGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/bg_button_rounded"
        android:text="enviar"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editAnoTurmaGrades"
        android:layout_width="130px"
        android:layout_height="90px"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Ano"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:textSize="23dp"
        app:layout_constraintStart_toEndOf="@+id/spinnerCursoGrades"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerCursoGrades"
        android:layout_width="190px"
        android:layout_height="80px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_spinner_rounded"
        android:popupBackground="@drawable/bg_spinner_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSelecionarArquivo"
        android:layout_width="200px"
        android:layout_height="80px"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_textview_rounded"
        android:text="Selecionar arquivo"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintStart_toEndOf="@+id/spinnerSemestreGrades"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonActionVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="189dp"
        android:clickable="true"
        app:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCadastrarProfessor"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <Spinner
        android:id="@+id/spinnerSemestreGrades"
        android:layout_width="50px"
        android:layout_height="80px"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_spinner_rounded"
        android:popupBackground="@drawable/bg_spinner_rounded"
        app:layout_constraintStart_toEndOf="@+id/editAnoTurmaGrades"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>