<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controle.Listar_Turma">

    <ListView
        android:id="@+id/listTurma"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:background="@color/bgColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonActionCadastrarTurma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_add"
        app:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/listTurma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toEndOf="@+id/editBtnSeeTurmas"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/editSpnCurso"
        android:layout_width="140dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_spinner_rounded"
        app:layout_constraintBottom_toTopOf="@+id/listTurma"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/editBtnSeeTurmas"
        android:layout_width="109dp"
        android:layout_height="39dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_button_rounded"
        android:text="Ver turmas "
        app:layout_constraintBottom_toTopOf="@+id/listTurma"
        app:layout_constraintStart_toEndOf="@+id/editSpnCurso" />


</android.support.constraint.ConstraintLayout>