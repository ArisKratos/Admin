<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controle.ManterCurso">


    <Button
        android:id="@+id/Button_Cadastrar_Curso"
        android:layout_width="400px"
        android:layout_height="150px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAdminEmail" />

    <EditText
        android:id="@+id/editAdminEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/ListaProfessores"
        android:layout_width="395dp"
        android:layout_height="457dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/ic_launcher_background"
        app:layout_constraintTop_toBottomOf="@+id/Button_Cadastrar_Curso"
        tools:layout_editor_absoluteX="8dp" />


</android.support.constraint.ConstraintLayout>