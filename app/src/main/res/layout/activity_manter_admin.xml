<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controle.ManterAdmin">

    <Button
        android:id="@+id/buttonCadastrarAdmin"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/cadastrar"
        android:textColor="@color/cardview_light_background"
        android:background="#31D30F"
        app:layout_constraintEnd_toEndOf="@+id/editSenhaAdmin"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/editSenhaAdmin"
        app:layout_constraintTop_toBottomOf="@+id/editSenhaAdmin" />

    <EditText
        android:id="@+id/editAdminEmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editSenhaAdmin"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editAdminEmail"
        app:layout_constraintStart_toStartOf="@+id/editAdminEmail"
        app:layout_constraintTop_toBottomOf="@+id/editAdminEmail" />

    <ListView
        android:id="@+id/listAdmins"
        android:layout_width="411dp"
        android:layout_height="446dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="@+id/buttonCadastrarAdmin"
        app:layout_constraintStart_toStartOf="@+id/buttonCadastrarAdmin"
        app:layout_constraintTop_toBottomOf="@+id/buttonCadastrarAdmin" />
</android.support.constraint.ConstraintLayout>